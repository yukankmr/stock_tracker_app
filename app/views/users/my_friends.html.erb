<h1>Friends</h1>

<div class="search-area">
  <h3>Search Friends</h3>
  <%= form_with url: search_friend_path, local: false, method: :get do |f| %>
    <div class="input-group input-group row">
      <div class="col-sm-9 no-right-padding">
        <%= f.text_field :friend, class: "form-control", placeholder: "Name or email"%>
      </div>
      <div class="col-sm-3 no-left-padding">
        <%= button_tag type: :submit, class: "btn btn-outline-secondary" do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
          </svg>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<div id="results">
  
</div>
<% if !@friends.empty? %>
  <%= render 'friends/list' %>
<% end %>